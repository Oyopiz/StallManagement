<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bglayout"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/mainl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:padding="10dp">

            <TextView
                android:id="@+id/ownerstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="James Kanogo"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:src="@drawable/menu"
                android:tint="@color/white" />
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainl"
            android:layout_marginTop="10sp"
            app:cardCornerRadius="15dp">


            <ImageView
                android:id="@+id/imgstall"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/mainl"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/mainl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/holder"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Land No:"
                android:textColor="@color/blue_main"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/numberstall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="6757645645645"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/mainl3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mainl2"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/pending"
                android:text="Pending Requests"
                android:layout_alignParentEnd="true"
                android:textColor="@color/red_900"
                android:layout_marginLeft="50dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:layout_marginEnd="40dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>
